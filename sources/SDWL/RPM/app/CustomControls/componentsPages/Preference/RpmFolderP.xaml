<Page x:Class="CustomControls.componentPages.Preference.RpmFolderP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CustomControls.componentPages.Preference"
      xmlns:sortList="clr-namespace:CustomControls.common.sortListView"
      xmlns:layoutList="clr-namespace:CustomControls.common.listViewLayoutManager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1000"
      Title="RpmFolderP">

    <Page.Resources>
        <local:Bool2TextConverter x:Key="Bool2TextConverter"/>
        <local:Bool2TextForeground x:Key="Bool2TextForegroundConverter"></local:Bool2TextForeground>
        <local:MyFolderCount2EditButtonVisibility x:Key="MyFolderCount2EditButtonVisibility"></local:MyFolderCount2EditButtonVisibility>
        <local:MyFolderCount2AddButtonVisibility x:Key="MyFolderCount2AddButtonVisibility"></local:MyFolderCount2AddButtonVisibility>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,0" Orientation="Vertical">
            <TextBlock Margin="10,0,10,0" FontSize="18" FontFamily="Segoe UI"
                   HorizontalAlignment="Left"
                   Text="{DynamicResource RpmP_UserRPM_Default}" />

            <Grid Margin="10,10,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                           VerticalAlignment="Center"
                           FontSize="14" FontFamily="Segoe UI" Foreground="Gray"
                   HorizontalAlignment="Left" TextWrapping="Wrap"
                   Text="{DynamicResource RpmP_UserRPM_Describe}" />


                <Grid Grid.Column="1"         
                      VerticalAlignment="Center"
                      Margin="20,0,20,0"
                      Width="100"
                      Height="30">
                    
                    <Button 
                        Visibility="{Binding MyFolderList.Count, Converter={StaticResource MyFolderCount2EditButtonVisibility}}"
                        Content="{DynamicResource RightsItem_Edit}"
                        Command="local:RpmP_DataCommands.EditMyFolderItem"
                        CommandParameter="0"
                        />

                    <Button  
                        Visibility="{Binding MyFolderList.Count, Converter={StaticResource MyFolderCount2AddButtonVisibility}}"
                        Content="{DynamicResource RpmP_Add_MyFolder}"  
                        Command="local:RpmP_DataCommands.Browse"/>
                </Grid>
            </Grid>

            <ListView Height="150"
                      Margin="10,0,10,0"
                      ItemsSource="{Binding MyFolderList}" 
                      sortList:ListViewBehavior.HeaderSort="True"
                      layoutList:ListViewLayoutManager.Enabled="True">

                <ListView.View>
                    <GridView AllowsColumnReorder="true">
                        <GridViewColumn Width="200"
                            layoutList:RangeColumn.MinWidth="100"
                            >

                            <GridViewColumnHeader HorizontalContentAlignment="Left" 
                                                  Height="25" Padding="8,0,0,0"
                                                  Content="{DynamicResource RpmP_List_Column_Name}"/>

                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Image Grid.Column="0" Width="20" Height="20" Source="/CustomControls;component/resources/icons/folder.png"/>
                                        <TextBlock Grid.Column="1"  FontSize="12" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" 
                                                   Text="{Binding FolderName}"/>
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>

                        </GridViewColumn>

                        <GridViewColumn Width="200" 
                            layoutList:RangeColumn.MinWidth="100"
                            >

                            <GridViewColumnHeader HorizontalContentAlignment="Left" 
                                                  Height="25" Padding="8,0,0,0"
                                                  Content="{DynamicResource RpmP_List_Column_Path}"/>

                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <TextBlock FontSize="12" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" 
                                                   Text="{Binding FolderPath}">
                                        </TextBlock>

                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="400"
                            layoutList:RangeColumn.MinWidth="200"
                            >

                            <GridViewColumnHeader HorizontalContentAlignment="Left" 
                                                  Height="25" Padding="8,0,0,0"
                                                  Content="{DynamicResource RpmP_List_Column_Auto_Protection}"/>

                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <TextBlock 
                                                   FontSize="14"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis" 
                                                   Text="{Binding Path=AutoProtection , Converter={StaticResource Bool2TextConverter}}"
                                                   Foreground="{Binding Path=AutoProtection, Converter={StaticResource Bool2TextForegroundConverter}}"
                                                   />
                                    </Grid>

                                    <!--<Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   FontSize="12"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis" 
                                                   Text="{Binding Path=AutoProtection , Converter={StaticResource Bool2TextConverter}}"
                                                   Foreground="{Binding Path=AutoProtection, Converter={StaticResource Bool2TextForegroundConverter}}"
                                                   />
                                        
                                        <Button Grid.Column="1" 
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Width="100"
                                                Click="Delete_MyFolder_Item_Click"
                                                Tag="{Binding PlacementTarget.SelectedIndex, RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}}}"
                                                Content="{DynamicResource RpmP_Delete_MyFolder_Item}"  
                                                />

                                    </Grid>-->
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>

                <ListView.Resources>
                    <ContextMenu x:Key="ItemContextMenu">
                        <MenuItem Header="Edit" 
                                  Command="local:RpmP_DataCommands.EditMyFolderItem"
                                  CommandParameter="{Binding SelectedIndex, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListView}}"
                                  />

                        <MenuItem Header="Remove"
                                  Command="local:RpmP_DataCommands.RemoveMyFolderItem"
                                  CommandParameter="{Binding SelectedIndex, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListView}}"
                                  />
                    </ContextMenu>

                </ListView.Resources>

                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}" >
                        <Setter Property="ContextMenu" Value="{StaticResource ItemContextMenu}" />
                    </Style>
                </ListView.ItemContainerStyle>

            </ListView>
        </StackPanel>

        <!--<StackPanel Grid.Row="0" Margin="0,0,0,0" Orientation="Vertical">
            <TextBlock Margin="10,0,0,0" FontSize="18" FontFamily="Segoe UI"
                   HorizontalAlignment="Left"
