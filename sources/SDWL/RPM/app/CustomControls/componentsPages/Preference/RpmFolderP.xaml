                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    --><!--file's folder--><!--

                    <TextBox Grid.Column="0" IsReadOnly="False">
