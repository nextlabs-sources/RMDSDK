                                             VerticalAlignment="Center" BorderThickness="0"
                                             FontFamily="Lato" FontSize="13" 
                                             TextChanged="Tbx_content_TextChanged"
                                             Text="{Binding RPMpath}" ToolTip="{Binding RPMpath}"/>
